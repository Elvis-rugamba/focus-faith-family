<!DOCTYPE html>
<html lang="zxx">

<head>
  <!-- Required meta tags -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Focus Faith Family</title>
  <!-- plugin css for this page -->
  <link rel="stylesheet" href="assets/vendors/mdi/css/materialdesignicons.min.css" />
  <link rel="stylesheet" href="assets/vendors/aos/dist/aos.css/aos.css" />
  <!-- End plugin css for this page -->
  <link rel="shortcut icon" href="assets/images/favicon.png" />
  <!-- inject:css -->
  <link rel="stylesheet" href="assets/css/style.css">
  <!-- endinject -->
</head>

<body>
  <div class="container-scroller">
    <div class="main-panel">
      <!-- partial:../partials/_navbar.html -->
      <%- include('../partials/_navbar') %>
      <!-- partial:partials/_banner -->
      <%- include('../partials/_banner') %>
      <div class="content-wrapper">
        <div class="container">
          <div class="col-sm-12">
            <div class="row breadcrumb">
              <% if (categories && categories.length > 0) { %>
              <% for( let i = 0; i < categories.length; i++ ) { %>
              <div class="breadcrumb-item">
                <a href="/news?category=<%- categories[i].category_name %>">
                  <%- categories[i].category_name %>
                </a>
              </div>
              <% } %>
              <% } else { %>
              <div class="breadcrumb-item">
                No data found
              </div>
              <% } %>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="card" data-aos="fade-up">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-12">
                    <h1 class="font-weight-600 mb-4">
                      Result
                    </h1>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-8">
                    <% if (news && news.length > 0) { %>
                    <% for( let i = 0; i < news.length; i++ ) { %>
                    <div class="row">
                      <div class="col-sm-4 grid-margin">
                        <div class="position-relative">
                          <div class="rotate-img">
                            <a class="font-weight-600 mb-2" href="/article?slug=<%- news[i].news_id %>">
                              <img src="<%- news[i].image %>" alt="banner" class="img-fluid" />
                            </a>
                          </div>
                          <a class="badge-positioned" href="/news?category=<%- news[i].category %>">
                            <span class="badge badge-danger font-weight-bold"><%- news[i].category %></span>
                          </a>
                        </div>
                      </div>
                      <div class="col-sm-8 grid-margin">
                        <h2 class="font-weight-600 mb-2">
                          <a class="font-weight-600 mb-2" href="/article?slug=<%- news[i].news_id %>">
                            <%- news[i].title %>
                          </a>
                        </h2>
                        <p class="fs-15">
                          <%- news[i].body.slice(0, 150) %> ...
                        </p>
                        <p class="fs-13 text-muted mb-0">
                          <span class="mr-2"></span>10 Minutes ago
                        </p>
                      </div>
                    </div>
                    <% } %>
                    <% } else { %>
                    <h1 class="font-weight-600 mb-4">
                      No data found
                    </h1>
                    <% } %>
                  </div>
                  <div class="col-lg-4">
                    <h2 class="mb-4 text-primary font-weight-600">
                      Recent
                    </h2>
                    <% if (recentNews && recentNews.length > 0) { %>
                    <% for( let i = 0; i < recentNews.length; i++ ) { %>
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="border-bottom pb-4 pt-4">
                          <div class="row">
                            <div class="col-sm-8">
                              <h5 class="font-weight-600 mb-1">
                                <a class="font-weight-600 text-dark" href="/article?slug=<%- recentNews[i].news_id %>">
                                  <%- recentNews[i].title %>
                                </a>
                              </h5>
                              <p class="fs-13 text-muted mb-0">
                                <span class="mr-2"><%- recentNews[i].category %></span>10 Minutes ago
                              </p>
                            </div>
                            <div class="col-sm-4">
                              <div class="rotate-img">
                                <a href="/article?slug=<%- recentNews[i].news_id %>">
                                  <img src="<%- recentNews[i].image %>" alt="banner" class="img-fluid" />
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% } %>
                    <% } else { %>
                    <h2 class="font-weight-600 mb-4">
                      No data found
                    </h2>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- main-panel ends -->
      <!-- container-scroller ends -->

      <!-- partial:../partials/_footer.html -->
      <%- include('../partials/_footer') %>
      <!-- partial -->
    </div>
  </div>
  <!-- inject:js -->
  <script src="assets/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- plugin js for this page -->

  <script src="assets/vendors/aos/dist/aos.js/aos.js"></script>
  <!-- End plugin js for this page -->
  <!-- Custom js for this page-->
  <script src="assets/js/demo.js"></script>
  <script src="assets/js/jquery.easeScroll.js"></script>
  <!-- End custom js for this page-->
</body>

</html>