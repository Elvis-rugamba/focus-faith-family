                    <div class="div-w-80 mr-3">
                      <div class="rotate-img">
                        <img src="<%- news[i].image %>" alt="thumb" class="img-fluid" />
                      </div>
                    </div>
                    <a class="font-weight-600 text-dark mb-0"
                      href="article?locale=<%- currentLocale %>&slug=<%- news[i].news_id %>">
                      <%- news[i].title.slice(0, 60) %>...
                    </a>
                  </div>
                  <% } %> <% } %>
                </div>
              </div>
            </div>
          </div>
          <div class="row" data-aos="fade-up">
            <div class="col-lg-3 stretch-card grid-margin">
              <div class="card">
                <div class="card-body">
                  <h2><%= translate('categoryLabel', currentLocale) %></h2>
                  <ul class="vertical-menu" id="categories">
                    <% if (categories && categories.length > 0) { %> <% for(
                      let i = 0; i < categories.length; i++ ) { %>
                    <li>
                      <a href="/news?locale=<%- currentLocale %>&category=<%- categories[i].category_name %>">
                        <% if (currentLocale === 'en-US') { %>
                        <%- categories[i].category_name %>
                        <% } else if (currentLocale === 'fr-FR') { %>
                        <%- categories[i].french_name %>
                        <% } else if (currentLocale === 'ki-RW') { %>
                        <%- categories[i].rwandan_name %>
                        <% } else { %>
                        <%-  categories[i].category_name %>
                        <% } %>
                      </a>
                    </li>
                    <% } %> <% } else { %>
                    <li><%= translate('errorMessage404Route', currentLocale) %></li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-lg-9 stretch-card grid-margin">
              <div class="card">
                <div class="d-flex justify-content-end">
                  <div class="w-20 p-2">
                    <a href="/news?locale=<%- currentLocale %>"><%= translate('viewAllLabel', currentLocale) %>
                    </a>
                  </div>
                </div>
                <div class="card-body" id="card-body">
                  <% if (news && news.splice(0, 6).length > 0) { %>
                  <% for( let i = 0; i < 10; i++ ) { %>
                  <% if (news[i] === undefined) { break; %>
                  <% } %>
