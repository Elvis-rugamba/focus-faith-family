              </div>
            </div>
          </div>
          <div class="row" data-aos="fade-up">
            <div class="col-sm-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-xl-6">
                      <div class="row">
                        <% if (moreNews && moreNews.length > 0) { %>
                        <div class="col-xl-6 col-lg-8 col-sm-6">
                          <div class="rotate-img">
                            <img src="<%- moreNews[0].image %>" alt="thumb" class="img-fluid" />
                          </div>
                          <h2 class="mt-3 text-primary mb-2">
                            <%- moreNews[0].title.slice(0, 30) %>...
                          </h2>
                          <p class="fs-13 mb-1 text-muted">
                            <span class="mr-2">
                              <%= timeDifference(moreNews[0].created_at, currentLocale) %>
                            </span>
                          </p>
                          <p class="my-3 fs-15">
                            <%- moreNews[0].body.slice(0, 150) %>...
                          </p>
                          <a href="article?locale=<%- currentLocale %>&slug=<%- moreNews[0].news_id %>"
                            class="font-weight-600 fs-16 text-dark">Read more</a>
                        </div>
                        <% } %>
                        <div class="col-xl-6 col-lg-4 col-sm-6">
                          <% if (moreNews && moreNews.splice(0, 1).length > 0) { %>
                          <% for( let i = 0; i < 4; i++ ) { %>
                          <% if (moreNews[i] === undefined) { break; %>
                          <% } %>
                          <div class="border-bottom pb-3 mb-3">
                            <h3 class="font-weight-600 mb-0">
                              <a href="article?locale=<%- currentLocale %>&slug=<%- moreNews[i].news_id %>"
                                class="font-weight-600 fs-16 text-dark">
                                <%- moreNews[0].title.slice(0, 40) %>...
                              </a>
                            </h3>
                            <p class="fs-13 text-muted mb-0">
                              <span class="mr-2"><%= timeDifference(moreNews[i].created_at, currentLocale) %></span>
                            </p>
                            <p class="mb-0">
                              <%- moreNews[0].body.slice(0, 60) %>...
                            </p>
                          </div>
                          <% } %><% } %>
                        </div>
                      </div>
                    </div>
                    <div class="col-xl-6">
                      <div class="row">
                        <div class="col-sm-6">
                          <% if (moreNews && moreNews.splice(0, 4).length > 0) { %>
