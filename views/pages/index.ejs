                            <div class="col-sm-12">
                              <div class="border-bottom pb-3">
                                <div class="row">
                                  <div class="col-sm-5 pr-2">
                                    <div class="rotate-img">
                                      <img src="<%- moreNews[1].image %>" alt="thumb" class="img-fluid w-100" />
                                    </div>
                                  </div>
                                  <div class="col-sm-7 pl-2">
                                    <p class="fs-16 font-weight-600 mb-0">
                                      <a href="article?locale=<%- currentLocale %>&slug=<%- moreNews[i].news_id %>"
                                        class="font-weight-600 fs-16 text-dark">
                                        <%- moreNews[i].title.slice(0, 30) %>...
                                      </a>
                                    </p>
                                    <p class="fs-13 text-muted mb-0">
                                      <span
                                        class="mr-2"><%= timeDifference(moreNews[i].created_at, currentLocale) %></span>
                                    </p>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                          <% } %><% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% if (tvShows && tvShows.length > 0) { %>
          <div class="row" data-aos="fade-up">
            <div class="col-sm-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-lg-8">
                      <div class="card-title">
                        <%= translate('tvLabel', currentLocale) %>
                      </div>
                      <div class="row">
                        <% for( let i = 0; i < 5; i++ ) { %>
                        <% if (tvShows[i] === undefined) { break; %>
                        <% } %>
                        <div class="col-sm-6 grid-margin">
                          <div class="position-relative">
                            <div class="rotate-img">
                              <a class="font-weight-600 mb-2"
                                href="/selectedtv?locale=<%- currentLocale %>&slug=<%- tvShows[i].id %>">
                                <img src="<%- tvShows[i].cover %>" alt="thumb" class="img-fluid" />
                              </a>
                            </div>
                            <div class="badge-positioned w-90">
                              <div class="d-flex justify-content-between align-items-center">
                                <span class="badge badge-danger font-weight-bold">
                                  <a class="text-white"
                                    href="/tv?locale=<%- currentLocale %>&category=<%- tvShows[i].category %>">
                                    <%- tvShows[i].category %>
                                  </a>
                                </span>
                                <div class="video-icon" style="cursor: pointer;"
                                  onclick="location.href = '/selectedtv?locale=<%- currentLocale %>&slug=<%- tvShows[i].id %>';">
                                  <i class="mdi mdi-play"></i>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <% } %>
                      </div>
                    </div>
                    <% if (tvShows && tvShows.splice(0, 5).length > 0) { %>
                    <div class="col-lg-4">
                      <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-3">
                          <a href="/tv?locale=<%- currentLocale %>">
                            <%= translate('viewAllLabel', currentLocale) %>
                          </a>
                        </p>
                      </div>
                      <% for( let i = 0; i < tvShows.splice(0, 5).length; i++ ) { %>
                      <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
                        <div class="div-w-80 mr-3">
                          <div class="rotate-img">
                            <img src="<%- tvShows[i].cover %>" alt="thumb" class="img-fluid" />
                          </div>
                        </div>
                        <h5 class="font-weight-600 mb-0">
                          <a class="font-weight-600 text-dark mb-2"
                            href="/selectedtv?locale=<%- currentLocale %>&slug=<%- tvShows[i].id %>">
                            <%- tvShows[i].title.slice(0, 60) %>...
                          </a>
                        </h5>
                      </div>
                      <% } %>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
