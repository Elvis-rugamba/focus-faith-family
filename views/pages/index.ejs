                    <div class="col-sm-4 grid-margin">
                      <div class="position-relative">
                        <div class="rotate-img">
                          <img src="<%- news[i].image %>" alt="thumb" class="img-fluid" />
                        </div>
                        <a class="badge-positioned"
                          href="/news?locale=<%- currentLocale %>&category=<%- news[i].category %>">
                          <span class="badge badge-danger font-weight-bold">
                            <%- news[i].category %>
                          </span>
                        </a>
                      </div>
                    </div>
                    <div class="col-sm-8 grid-margin">
                      <h2 class="mb-2 font-weight-600">
                        <a class="font-weight-600 mb-2 text-dark"
                          href="/article?locale=<%- currentLocale %>&slug=<%- news[i].news_id %>">
                          <%- news[i].title %>
                        </a>
                      </h2>
                      <div class="fs-13 mb-2">
                        <span class="mr-2"><%= timeDifference(news[i].created_at,
                            currentLocale) %></span>
                      </div>
                    </div>
                  </div>
