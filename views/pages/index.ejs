            <div class="col-xl-4 stretch-card grid-margin">
              <div class="card">
                <div class="card-body">
                  <% if (news &&  news.splice(0, 1).length > 0) { %>
                  <% for(let i = 0; i < 5; i++ ) { %>
                  <% if (news[i] === undefined) { break; %>
                  <% } %>
