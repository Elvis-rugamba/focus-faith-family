<script>
  function currentDateTime() {
    const currentdate = new Date();
    const dateElement = document.querySelector("#date");
    const timeElement = document.querySelector("#time");
    dateElement.innerHTML = currentdate.toLocaleString("default", {
      weekday: "short",
      year: "numeric",
      month: "short",
      day: "numeric",
    });
    timeElement.innerHTML = currentdate.toLocaleString("default", {
      hour12: false,
      hour: "2-digit",
      minute: "2-digit",
      second: "2-digit",
    });

    const t = setTimeout(function () {
    currentDateTime();
  }, 1000);
  };

  currentDateTime();
</script>
